# tofu/talos/machine-config/worker.yaml.tftpl
machine:
  files:
    - path: /var/openebs/local
      permissions: 0755
      op: create
      content: ""
  kubelet:
    extraMounts:
      - destination: /var/openebs/local
        type: bind
        source: /var/openebs/local
        options:
          - bind
          - rw
          - rshared
  network:
    hostname: ${hostname}
  nodeLabels:
    topology.kubernetes.io/region: ${cluster_name}
    topology.kubernetes.io/zone: ${node_name}
